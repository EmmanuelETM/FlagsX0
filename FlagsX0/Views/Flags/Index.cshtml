@using FlagsX0.Data.Entities
@model FlagIndexViewModel

@{
    ViewData["Title"] = "Flags Page";
}

<a asp-action="Create" asp-controller="Flags" class="btn btn-primary">
    Create Flag
</a>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Flag Name</th>
        <th scope="col">Active</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var flag in Model.Flags)
    {
        <tr>
            <th scope="row">@flag.Name</th>
            <td>
                <div class="form-check form-switch">
                    <input asp-for="@flag.IsEnabled" class="form-check-input" readonly role="switch" type="checkbox" />
                </div>
            </td>
            <td>
                <button type="button" class="btn btn-outline-danger">
                    <i class="bi bi-archive"></i>
                </button>
                <button type="button" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i>
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>
